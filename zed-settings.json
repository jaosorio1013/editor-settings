// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "outline_panel": {
    "dock": "right",
  },

  // "agent": {
  //   "always_allow_tool_actions": true,
  //   "default_profile": "write",
  //   "default_model": {
  //     "provider": "zed.dev",
  //     "model": "claude-3-7-sonnet-thinking-latest",
  //   },
  //   "inline_assistant_model": {
  //     "provider": "copilot_chat",
  //     "model": "o4-mini",
  //   },
  // },
  // "features": {
  //   "edit_prediction_provider": "supermaven",
  // },

  "title_bar": {
    "show_branch_icon": false,
  },
  "status_bar": {
    "active_language_button": true,
  },
  "project_panel": {
    "dock": "right",
    "button": false,
  },
  "tab_bar": {
    "show": false,
  },
  "ui_font_family": "Dank Mono",
  "buffer_font_family": "Dank Mono",
  "terminal": {
    "shell": {
      "program": "C:\\Program Files\\Git\\bin\\bash.exe",
    },
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Zed (Default)",
    "dark": "Catppuccin Mocha",
  },
  "base_keymap": "JetBrains",
  "ui_font_size": 20,
  "buffer_font_size": 25,
  "theme": {
    "mode": "dark",
    "light": "One Dark",
    "dark": "Catppuccin Mocha (Blur) [Light]",
  },

  "lsp": {
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "diagnosticMode": "workspace",
          "inlayHints": {
            "callArgumentNames": false,
          },
        },
      },
    },
  },

  "file_types": {
    "HTML": ["html", "jinja", "jinja2", "j2"],
    "Django": ["html"],
    "PHP": ["*.php"],
    "Blade": ["*.blade.php"],
  },

  "languages": {
    "PHP": {
      "language_servers": ["phpactor", "..."],
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"],
        },
      },
    },
    "Python": {
      "language_servers": [
        // Disable basedpyright and enable Ty, and otherwise
        // use the default configuration.
        "ty",
        "!basedpyright",
        "...",
      ],
    },
    "Django": {
      "language_servers": ["django-language-server"],
      "tab_size": 4,
    },
  },
}
